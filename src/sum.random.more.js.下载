function rand_0_no(no) {
	var str = '';
	str = Math.round(Math.random()*no);
	return str;
}

function random_add(num) {

	setInterval(function() { 
		//显示的长度 
	    var len = 5;

	    num = parseInt(num) + rand_0_no(3); 

	    num = num.toString(); 

	    // while(num.length < len) { 

	    //     num = '0' + num; 

    	// } 

    document.getElementById('sumcount').innerHTML = num + "人已购买"; 

	}, 1000) 

}
